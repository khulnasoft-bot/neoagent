# Only allow build scripts for modules that are essential for Vercel deployment
# node-llama-cpp is excluded because it requires cmake which is not available in Vercel's serverless environment
allow-build-scripts=@whiskeysockets/baileys,sharp,esbuild,protobufjs,fs-ext,node-pty,@lydell/node-pty,@matrix-org/matrix-sdk-crypto-nodejs

# Prevent npm warnings about unknown env configs
# ignore-scripts will be set to false to allow our whitelisted scripts
ignore-scripts=false
